package com.DR.dLib;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.graphics.Color;

public class CircleFillAnimation extends dAnimation {
	
	public CircleFillAnimation(dImage objectToAnimate, float duration, AnimationStatusListener listener, Color c)
	{
		super(objectToAnimate, duration, listener);
		this.getAnimatedObject().setColor(c);
	}

	@Override
	protected void animate(float time, float duration, float delta)
	{
		((dImage)getAnimatedObject()).setDimensions(dTweener.ExponentialEaseOut(time, 0, dValues.VH * 2.5f, duration)
				,dTweener.ExponentialEaseOut(time, 0, dValues.VH * 2.5f, duration));
		getAnimatedObject().setOriginCenter();
	}
	
	@Override
	public void start()
	{
		super.start();
		getAnimatedObject().setPos(Gdx.input.getX(), Gdx.input.getY());
		((dImage)getAnimatedObject()).setDimensions(0, 0);
	}

}
