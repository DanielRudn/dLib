package com.DR.dLib;

public class SlideFromTopAnimation extends dAnimation {

	public SlideFromTopAnimation(dObject objectToAnimate, float duration, AnimationStatusListener listener, int ID) {
		super(objectToAnimate, duration, listener, ID);
	}

	@Override
	protected void animate(float time, float duration, float delta) {
		getAnimatedObject().setY(dTweener.ElasticOut(time,(dValues.camera.position.y - dValues.VH / 2f - getAnimatedObject().getHeight() * 1.25f),
				(dValues.camera.position.y - dValues.VH / 2f) - (dValues.camera.position.y - dValues.VH / 2f - getAnimatedObject().getHeight() * 1.25f),
				duration, 6f));
	}

	@Override
	public void start()
	{
		super.start();
		getAnimatedObject().setY(dValues.VH - getAnimatedObject().getHeight() * 1.25f);
	}
}
