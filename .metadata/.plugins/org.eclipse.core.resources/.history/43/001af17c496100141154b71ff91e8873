package com.DR.dLib;

import com.DR.dLib.dImage;
import com.DR.dLib.dTweener;
import com.DR.dLib.dValues;

public class CircleShrinkAnimation extends dAnimation {

	public CircleShrinkAnimation(dImage objectToAnimate, float duration, AnimationStatusListener listener, int ID) {
		super(objectToAnimate, duration, listener, ID);
	}

	@Override
	protected void animate(float time, float duration, float delta) {
		((dImage)getAnimatedObject()).setDimensions(dTweener.ExponentialEaseOut(time,dValues.VH * 2.5f, -dValues.VH * 2.5f, duration)
				,dTweener.ExponentialEaseOut(time, dValues.VH * 2.5f, - dValues.VH * 2.5f,  duration));
		getAnimatedObject().setOriginCenter();
	}

}
