package com.DR.dLib.animations;

import com.DR.dLib.dObject;
import com.DR.dLib.dTweener;
import com.DR.dLib.dValues;
import com.DR.dLib.ui.dImage;
import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.graphics.Color;

public class CircleFillAnimation extends dAnimation {
	
	public CircleFillAnimation(float duration, AnimationStatusListener listener, int ID, Color c, dObject... objectToAnimate)
	{
		super(duration, listener, ID, objectToAnimate);
		getAnimatedObjects()[0].setColor(c);
	}

	@Override
	protected void animate(float time, float duration, float delta)
	{
		((dImage)getAnimatedObjects()[0]).setDimensions(dTweener.ExponentialEaseOut(time, 0, dValues.VH * 2.5f, duration)
				,dTweener.ExponentialEaseOut(time, 0, dValues.VH * 2.5f, duration));
		getAnimatedObject().setOriginCenter();
	}
	
	@Override
	public void start()
	{
		super.start();
		getAnimatedObject().setPos(Gdx.input.getX(), Gdx.input.getY());
		((dImage)getAnimatedObject()).setDimensions(0, 0);
	}

}
